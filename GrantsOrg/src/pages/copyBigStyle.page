<apex:page >
    <style>
        *{
            font-family:'Ubuntu',san-serif;
            font-size:15px;  
        }
        body{
            min-height:500px;
            min-width:800px;
        }
        div{
            display:block;
        }
        #header, #error, #body, #footerImage, #footer{
            
            width:100%;    
        }
        #header, #footerImage, #footer{
            background-color:black;
            height:100px;
            min-height:100px;
        }
        #header{
            border-bottom:5px solid magenta;
            border-bottom-left-radius:8px;
            border-bottom-right-radius:8px;
            height:100px;
        }
        #header div{
            display:inline;
        }
        #header img{
            height:100px;
            width:100px;
        }
        #header div:first child{
            float:left;
        }
        #header div:last-child{
            float:right;
            margin-top:25px;
            margin-right:15%;
        }
        #header .fa-sign-out, #header .fa{
            color:white;
            text-shadow:0px 0px 10px white;
        }
        #error{
            min-height:2px;
        }
        #error #outTxt{
            color:red;
            font-weight:bold;
        }
        #body{
            min-height:330px;
        }
        #footerImage{
            
        }
        #footer p{
            color:white;
            font-size:30px;
            text-shadow:0px 0px 30px white;
        }
        .actvTab{
            background-color: #236FBD;
            color:white;
            background-image:none;
            font-size:20px;
            font-family:'Ubuntu',sans-serif;
        }
        .inactvTab{ 
            background-color: lightgrey;
            color:black;
            background-image:none;
            font-family:'Ubuntu',sans-serif;
            font-size:20px;
        }
        #footerImage{
            background-image:url("https://lh4.googleusercontent.com/-sGks2m-eVtc/VUsrUf3tDiI/AAAAAAAAAZs/QQKZ2BAG5Hw/w1039-h92-no/footer%2Blogo.png");
            background-repeat:repeat-x;
            min-height:100px;
        }
    </style>
</apex:page>